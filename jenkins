pipeline {
	agent any
	stages {
		stage('hello') {
			script {
				// Set PATH to include the directory where Python is installed
				withEnv(["PATH+PYTHON=C:\\Users\\USER\\AppData\\Local\\Programs\\Python\\Python312"]) {
				// Perform SCM operations and run Python script
				sh 'python hello.py'
				}
			}
		}
	}
}
